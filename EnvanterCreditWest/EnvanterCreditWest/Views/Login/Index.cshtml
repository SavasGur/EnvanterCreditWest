
@model EnvanterCreditWest.Models.Users

@{

    if (Session["Auth"] != null)
    {
         if ((int)Session["Auth"] == 1)
        {
            Response.Redirect("~/Home");
            return;
        }
    }


    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="http://www.creditwestbank.com/wp-content/themes/creditwest/images/favicon.ico">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        form {
            border: 3px solid #f1f1f1;
            border-radius: 4px;
        }

        .west-text-error {
            font-size: 2vh;
            color: indianred;
            font-weight: bold;
            text-align: center;
            display: block;
            margin: 3vh;
        }

        input[type=text], input[type=password] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
        }

            button:hover {
                opacity: 0.8;
            }

        .revealpsw {
            width: auto;
            padding: 10px 18px;
            background-color: #f44336;
        }

        .imgcontainer {
            text-align: center;
            margin: 24px 0 12px 0;
        }


        .container {
            padding: 16px;
        }

        @@media screen and (max-width: 300px) {

            .revealpsw {
                width: 100%;
            }
        }
    </style>
</head>
<body style="margin-left: 35%;margin-right: 35%;border-radius: 4px;">

    <img style="margin-bottom:2vh;width: 100%;margin-top:15vh"
         src="~/Resources/cwman.jpg" />
    @using (Html.BeginForm("Auth", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="container">
            <label for="uname"><b>Kullanıcı Adı</b></label>
            <input type="text" placeholder="isim.soyisim" name="username" required="">

            <label for="psw"><b>Şifre</b></label>
            <input type="password" placeholder="" name="password" required="" id="pass">

            <button type="submit">Giriş</button>
        </div>

        <a class="west-text-error">@ViewBag.Error</a>

        <div class="container" style="background-color:#f1f1f1">
            <button type="button" class="revealpsw" onmouseup="showpsw()" onmousedown="showpsw()">Şifreyi Göster</button>
            <button style="background-color: #003399;float:  right;width:  auto;padding:  10px 18px;" onclick="location.href='/home/contact'" type="button">Şifremi Unuttum</button>
        </div>
    }

    <script>
        function showpsw() {
            var x = document.getElementById("pass");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }</script>
    <footer style="position: fixed;right: 20px;bottom: 10px;">2018 - Software Genious</footer>






</body>
</html>