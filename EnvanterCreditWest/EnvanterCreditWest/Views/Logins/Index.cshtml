@model IEnumerable<EnvanterCreditWest.Models.Logins>

@{
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>West Manager</title>
    <link rel="shortcut icon" href="http://www.creditwestbank.com/wp-content/themes/creditwest/images/favicon.ico">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        form {
            border: 3px solid #f1f1f1;
            border-radius: 4px;
        }

        input[type=text], input[type=password] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
        }

            button:hover {
                opacity: 0.8;
            }

        .revealpsw {
            width: auto;
            padding: 10px 18px;
            background-color: #f44336;
        }

        .imgcontainer {
            text-align: center;
            margin: 24px 0 12px 0;
        }


        .container {
            padding: 16px;
        }
    </style>
</head>
<body>

    <h1 style="margin-top:  7%;margin-left: 35%;font-size: 2vw;"><b></b></h1>

    <form action="/home/index" style="margin-left: 35%;margin-right: 35%;border-radius: 4px;">
        <div class="imgcontainer">
            <img src="~/Resources/cwest.jpg" alt="Avatar" style="width: 60%;">
        </div>

        <div class="container">
            <label for="Username"><b>Kullanıcı Adı</b></label>
            <input type="text" placeholder="isim.soyisim" name="Username" required="">

            <label for="Password"><b>Şifre</b></label>
            <input type="password" placeholder="Minimum 5 karakter" name="Password" required="" minlength="5" id="psw">

            <button type="submit">Giriş</button>
        </div>

        <div class="container" style="background-color:#f1f1f1">
            <button type="button" class="revealpsw" onmouseup="showpsw()" onmousedown="showpsw()">Şifreyi Göster</button>
            <button style="background-color: 003399;float:  right;width:  auto;padding:  10px 18px;" onclick="location.href='/home/contact'" type="button">Şifremi Unuttum</button>

        </div>
    </form>
    <script>
        function showpsw() {
            var x = document.getElementById("psw");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }</script>
    <footer style="
    position: absolute;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 55px;
    background-color: #e9ecef;
    text-align: center;
    ">
        <div class="container">
            <div class="text-center" style="margin-top:  5px;">
                <small>© 2018 - Software Genius</small>
            </div>
        </div>
    </footer>

</body>