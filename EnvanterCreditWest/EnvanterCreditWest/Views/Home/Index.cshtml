@{

                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Barcode Generator</h2>
<input type="text" id="txtBarcode" value="Please enter barcode" />

@Ajax.ActionLink("Create Barcode", "CreateBarcode","Home",
    new AjaxOptions
    {
        InsertionMode=InsertionMode.Replace,
        UpdateTargetId= "BardcodeDiv"
    }, new { @class = "btn btn-success" ,@id="test" })
<div id="BardcodeDiv">

</div>
<script>
    function test() {
        alert();
    }
    $("#txtBarcode").change(function () {
        $("#test").attr("href", "/Home/CreateBarcode?barcode=" + $("#txtBarcode").val());
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
