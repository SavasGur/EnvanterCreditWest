@model IEnumerable<EnvanterCreditWest.Models.ChangeDetails>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() > 0)
{
    <h2>Değişiklik Listesi : @Model.First().Changes.Products.Barcode</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
        

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Changes.Date.Value.ToShortDateString() - @Html.DisplayFor(modelItem => item.Description)
            </td>
        </tr>

        }
      

    </table>

    <p>
        @Html.ActionLink("Ürüne git", "Details", "Products", new { id = Model.First().Changes.ProductId }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Ürünlere geri dön", "Index", "Products", null, new { @class = "btn btn-success" })
    </p>

}
else
{
    <h3>Değişiklik yapılmamıştır.</h3>
    <p>
        @Html.ActionLink("Ürüne git", "Details", "Products", new { id = @ViewBag.ProductId }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Ürünlere geri dön", "Index", "Products", null, new { @class = "btn btn-success" })
    </p>
}
